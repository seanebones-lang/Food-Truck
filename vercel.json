{
  "version": 2,
  "builds": [
    {
      "src": "packages/admin-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/admin-app/dist"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "packages/admin-app/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
